<UserControl
    x:Class="CotrollerDemo.Views.ControllerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:local="clr-namespace:CotrollerDemo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="600"
    d:DesignWidth="860"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="{x:Type dxg:GridColumn}">
            <Setter Property="HorizontalHeaderContentAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>

    <dxlc:LayoutControl
        VerticalAlignment="Stretch"
        AnimateScrolling="False"
        DragScrolling="False"
        Orientation="Horizontal">
        <dxlc:LayoutItem
            HorizontalAlignment="Left"
            Label="文件列表"
            LabelPosition="Top">
            <dxe:ListBoxEdit
                Width="210"
                Height="500"
                HorizontalAlignment="Left"
                dx:ScrollBarExtensions.ScrollBarMode="TouchOverlap"
                ItemsSource="{Binding FileNames}" />
        </dxlc:LayoutItem>
        <dxlc:LayoutGroup Margin="15,0,0,0" Orientation="Vertical">
            <dxlc:LayoutGroup
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Orientation="Vertical">
                <dxlc:LayoutItem>
                    <dxg:GridControl
                        x:Name="gridControl"
                        Width="525"
                        Height="128"
                        dx:ScrollBarExtensions.ScrollBarMode="TouchOverlap"
                        ItemsSource="{Binding Devices}">
                        <dxg:GridControl.Columns>
                            <dxg:GridColumn FieldName="IpAddress" />
                            <dxg:GridColumn FieldName="Mask" />
                            <dxg:GridColumn FieldName="Status" />
                        </dxg:GridControl.Columns>
                        <dxg:GridControl.View>
                            <dxg:TableView
                                AllowEditing="False"
                                AutoWidth="True"
                                NavigationStyle="Row"
                                RowDetailsVisibilityMode="Visible"
                                ShowGroupPanel="False"
                                ShowHorizontalLines="True"
                                ShowIndicator="False"
                                ShowVerticalLines="True" />
                        </dxg:GridControl.View>
                    </dxg:GridControl>
                </dxlc:LayoutItem>
                <dxlc:LayoutGroup
                    Margin="0,5"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <dxlc:LayoutItem HorizontalAlignment="Left" VerticalAlignment="Top">
                        <dx:SimpleButton
                            Height="30"
                            Margin="5,0"
                            Content="设备查询" />
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem HorizontalAlignment="Left" VerticalAlignment="Top">
                        <dx:SimpleButton
                            Height="30"
                            Margin="5,0"
                            Command="{Binding LinkCommand}"
                            CommandParameter="{Binding ElementName=gridControl, Path=SelectedItem}"
                            Content="连接" />
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem HorizontalAlignment="Left" VerticalAlignment="Top">
                        <dx:SimpleButton
                            Height="30"
                            Margin="5,0"
                            Content="断开" />
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>
            </dxlc:LayoutGroup>

            <dxlc:LayoutGroup Orientation="Vertical">
                <dxlc:LayoutItem
                    x:Name="lightingChartItem"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <Canvas
                        Name="canvasBase"
                        Width="525"
                        Margin="0,0,5,0"
                        SizeChanged="canvasBase_SizeChanged" />
                </dxlc:LayoutItem>
                <dxlc:LayoutGroup
                    Margin="0,5"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <dxlc:LayoutItem
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                        <dx:SimpleButton Height="30" Content="试验开始" />
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                        <dx:SimpleButton Height="30" Content="试验停止" />
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                        <dx:SimpleButton
                            Height="30"
                            Command="{Binding SaveDataCommand}"
                            Content="保存数据" />
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>
            </dxlc:LayoutGroup>
        </dxlc:LayoutGroup>


    </dxlc:LayoutControl>
</UserControl>
