<UserControl
    x:Class="CotrollerDemo.Views.ControllerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:CotrollerDemo.Views"
    xmlns:lvc="http://schemas.arction.com/charting/ultimate/"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="600"
    d:DesignWidth="860"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="{x:Type dxg:GridColumn}">
            <Setter Property="HorizontalHeaderContentAlignment" Value="Center" />
        </Style>

        <!--  菜单项样式  -->
        <Style x:Key="MenuItemStyle" TargetType="MenuItem">
            <Setter Property="Command" Value="{Binding Command}" />
            <Setter Property="CommandParameter" Value="{Binding Parameter}" />
        </Style>
    </UserControl.Resources>

    <dxlc:LayoutControl
        VerticalAlignment="Stretch"
        AnimateScrolling="False"
        DragScrolling="False"
        Orientation="Horizontal">
        <dxlc:LayoutGroup
            x:Name="fileGroup"
            HorizontalAlignment="Left"
            Orientation="Vertical">
            <dxlc:LayoutItem Label="文件列表" LabelPosition="Top">
                <dxe:ListBoxEdit
                    x:Name="fileList"
                    MinWidth="225"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    dx:ScrollBarExtensions.ScrollBarMode="TouchOverlap"
                    IsEnabled="{Binding IsDrop}"
                    ItemsSource="{Binding FileNames}"
                    PreviewMouseMove="ListBoxEdit_PreviewMouseMove" />
            </dxlc:LayoutItem>
            <dxlc:LayoutGroup
                Margin="0,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <dxlc:LayoutItem>
                    <dx:SimpleButton
                        Height="30"
                        Margin="5,0"
                        Command="{Binding OpenFolderCommand}"
                        Content="打开文件夹" />
                </dxlc:LayoutItem>
                <dxlc:LayoutItem>
                    <dx:SimpleButton
                        Height="30"
                        Margin="5,0"
                        Command="{Binding ClearFolderCommand}"
                        Content="清空" />
                </dxlc:LayoutItem>
                <dxlc:LayoutItem>
                    <dx:SimpleButton
                        Height="30"
                        Margin="5,0"
                        Command="{Binding DeleteFileCommand}"
                        CommandParameter="{Binding ElementName=fileList, Path=SelectedItem}"
                        Content="删除" />
                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>
        </dxlc:LayoutGroup>
        <dxlc:LayoutGroup Margin="15,0,0,0" Orientation="Vertical">
            <dxlc:LayoutGroup
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Orientation="Vertical">
                <dxlc:LayoutItem>
                    <dxg:GridControl
                        x:Name="gridControl"
                        Height="128"
                        dx:ScrollBarExtensions.ScrollBarMode="TouchOverlap"
                        ItemsSource="{Binding Devices}">
                        <dxg:GridControl.Columns>
                            <dxg:GridColumn Binding="{Binding IpAddress}" FieldName="设备IP" />
                            <dxg:GridColumn Binding="{Binding SerialNum}" FieldName="设备序列号" />
                            <dxg:GridColumn Binding="{Binding Status}" FieldName="状态" />
                        </dxg:GridControl.Columns>
                        <dxg:GridControl.View>
                            <dxg:TableView
                                AllowEditing="False"
                                AutoWidth="True"
                                NavigationStyle="Row"
                                RowDetailsVisibilityMode="Visible"
                                ShowGroupPanel="False"
                                ShowHorizontalLines="True"
                                ShowIndicator="False"
                                ShowVerticalLines="True" />
                        </dxg:GridControl.View>
                    </dxg:GridControl>
                </dxlc:LayoutItem>
                <dxlc:LayoutGroup
                    Margin="0,5"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <dxlc:LayoutItem HorizontalAlignment="Left" VerticalAlignment="Top">
                        <dx:SimpleButton
                            Height="30"
                            Margin="5,0"
                            Command="{Binding DeviceQueryCommand}"
                            Content="设备查询" />
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem HorizontalAlignment="Left" VerticalAlignment="Top">
                        <dx:SimpleButton
                            Height="30"
                            Margin="5,0"
                            Command="{Binding ConnectCommand}"
                            CommandParameter="{Binding ElementName=gridControl, Path=SelectedItem}"
                            Content="连接" />
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem HorizontalAlignment="Left" VerticalAlignment="Top">
                        <dx:SimpleButton
                            Height="30"
                            Margin="5,0"
                            Command="{Binding DisconnectCommand}"
                            CommandParameter="{Binding ElementName=gridControl, Path=SelectedItem}"
                            Content="断开" />
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>
            </dxlc:LayoutGroup>

            <dxlc:LayoutGroup Orientation="Vertical">
                <dxlc:LayoutItem
                    x:Name="LightingChartItem"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <dxdo:DockLayoutManager x:Name="ChartDock">
                        <dxdo:LayoutGroup x:Name="ChartDockGroup">
                            <dxdo:LayoutPanel AllowDrop="True" Drop="ChartDockGroup_Drop">
                                <Canvas x:Name="CanvasBase" SizeChanged="CanvasBase_SizeChanged">
                                    <!--  事件绑定  -->
                                    <dxmvvm:Interaction.Triggers>
                                        <dxmvvm:EventToCommand
                                            Command="{Binding ShowMenuCommand}"
                                            CommandParameter="{Binding ElementName=CanvasBase}"
                                            EventName="PreviewMouseRightButtonDown" />
                                    </dxmvvm:Interaction.Triggers>
                                </Canvas>
                            </dxdo:LayoutPanel>
                        </dxdo:LayoutGroup>
                    </dxdo:DockLayoutManager>
                </dxlc:LayoutItem>
                <dxlc:LayoutGroup HorizontalAlignment="Right" Orientation="Vertical">
                    <dxlc:LayoutGroup HorizontalAlignment="Right" Orientation="Horizontal">
                        <dxlc:LayoutItem
                            Margin="5,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <dx:SimpleButton
                                Height="30"
                                Command="{Binding StartTestCommand}"
                                Content="试验开始" />
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem
                            Margin="5,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <dx:SimpleButton
                                Height="30"
                                Command="{Binding StopTestCommand}"
                                Content="试验停止" />
                        </dxlc:LayoutItem>
                        <!--<dxlc:LayoutItem
                            Margin="5,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <dx:SimpleButton
                                Height="30"
                                Command="{Binding SaveDataCommand}"
                                Content="保存数据" />
                        </dxlc:LayoutItem>-->
                        <dxlc:LayoutItem
                            Margin="5,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <dx:SimpleButton
                                x:Name="AddChart"
                                Height="30"
                                Command="{Binding AddChartCommand}"
                                CommandParameter="{Binding ElementName=ChartDockGroup}"
                                Content="添加图表" />
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>
                    <dxlc:LayoutGroup>
                        <dxlc:LayoutItem
                            Margin="5,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <dx:SimpleButton
                                Height="30"
                                Command="{Binding SwitchLegendCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                                Content="隐藏图例" />
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem
                            Margin="5,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <dx:SimpleButton
                                Height="30"
                                Command="{Binding ZoomToFitCommand}"
                                Content="重置缩放" />
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem
                            Margin="5,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <dx:SimpleButton
                                x:Name="AddCommentBtn"
                                Height="30"
                                Command="{Binding AddCommentCommand}"
                                CommandParameter="{Binding ElementName=CanvasBase}"
                                Content="添加注释" />
                        </dxlc:LayoutItem>

                    </dxlc:LayoutGroup>
                </dxlc:LayoutGroup>
            </dxlc:LayoutGroup>
        </dxlc:LayoutGroup>

    </dxlc:LayoutControl>

</UserControl>
