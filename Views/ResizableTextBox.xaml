<UserControl
    x:Class="CotrollerDemo.Views.ResizableTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CotrollerDemo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="root"
    Background="Transparent"
    ContextMenuOpening="UserControl_ContextMenuOpening"
    Foreground="White"
    MouseDoubleClick="UserControl_MouseDoubleClick"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="ContextMenu" Value="{x:Null}" />
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#666666" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <UserControl.ContextMenu>
        <ContextMenu x:Name="MainContextMenu">
            <MenuItem Click="SelectAll_Click" Header="全选" />
            <MenuItem Click="Cut_Click" Header="剪切" />
            <MenuItem Click="Copy_Click" Header="复制" />
            <MenuItem Click="Paste_Click" Header="粘贴" />
            <MenuItem Click="Delete_Click" Header="删除控件" />
        </ContextMenu>
    </UserControl.ContextMenu>

    <Grid>
        <!--  文本显示  -->
        <TextBlock
            x:Name="textBlock"
            Margin="3"
            Text="{Binding ElementName=root, Path=Text, Mode=OneWay}"
            TextWrapping="Wrap"
            Visibility="Visible" />

        <!--  编辑框  -->
        <TextBox
            x:Name="textBox"
            Background="Transparent"
            BorderThickness="0"
            ContextMenu="{x:Null}"
            Foreground="White"
            KeyDown="TextBox_KeyDown"
            LostFocus="TextBox_LostFocus"
            PreviewMouseRightButtonDown="TextBox_PreviewMouseRightButtonDown"
            Text="{Binding ElementName=root, Path=Text, Mode=OneWay}"
            TextWrapping="Wrap"
            Visibility="Collapsed" />

        <!--  缩放控制点  -->
        <Thumb
            x:Name="leftThumb"
            Width="1"
            HorizontalAlignment="Left"
            BorderBrush="White"
            BorderThickness="1"
            Cursor="SizeWE" />
        <Thumb
            x:Name="rightThumb"
            Width="1"
            HorizontalAlignment="Right"
            BorderBrush="White"
            BorderThickness="1"
            Cursor="SizeWE" />
        <Thumb
            x:Name="topThumb"
            Height="1"
            VerticalAlignment="Top"
            BorderBrush="White"
            BorderThickness="1"
            Cursor="SizeNS" />
        <Thumb
            x:Name="bottomThumb"
            Height="1"
            VerticalAlignment="Bottom"
            BorderBrush="White"
            BorderThickness="1"
            Cursor="SizeNS" />

        <!--  角部缩放点  -->
        <Thumb
            x:Name="topLeftThumb"
            Width="1"
            Height="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderBrush="White"
            BorderThickness="1"
            Cursor="SizeNWSE" />
        <Thumb
            x:Name="topRightThumb"
            Width="1"
            Height="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            BorderBrush="White"
            BorderThickness="1"
            Cursor="SizeNESW" />
        <Thumb
            x:Name="bottomLeftThumb"
            Width="1"
            Height="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            BorderBrush="White"
            BorderThickness="1"
            Cursor="SizeNESW" />
        <Thumb
            x:Name="bottomRightThumb"
            Width="1"
            Height="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            BorderBrush="White"
            BorderThickness="1"
            Cursor="SizeNWSE" />
    </Grid>
</UserControl>